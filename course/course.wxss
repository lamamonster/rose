/* pages/course/course.wxss */
page{
  background:#F6F5F5;
}
.search_container {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 88rpx;
  background: rgba(240, 240, 240, 1);
}

.search_header {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width: 690rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 1);
  border: 1px solid rgba(229, 229, 229, 1);
  border-radius: 30px;
}

.search_word {
  margin-top: 5rpx;
  width: 600rpx;
  height: 26rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(117, 117, 117, 1);
}

.search_icon {
  margin-left: 20rpx;
  margin-right: 10rpx;
  width: 33rpx;
  height: 33rpx;
}